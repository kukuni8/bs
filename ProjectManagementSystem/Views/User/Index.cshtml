@model IEnumerable<ApplicationUser>
@using Microsoft.AspNetCore.Identity;
@inject RoleManager<IdentityRole> roleManager;
@inject UserManager<ApplicationUser> userManager;
@{
    ViewBag.Title = "用户列表";
}


<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">用户信息</h2>

                    <!-- Table with stripped rows -->
                    <table id="mytable" class="table datatable">
                        <thead>
                            <tr>
                                <th scope="col">用户名</th>
                                <th scope="col">姓名</th>
                                <th scope="col">部门</th>
                                <th scope="col">职位</th>
                                <th scope="col">角色</th>
                                <th scope="col">操作</th> <!-- 添加新的表头单元格 -->
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var user in Model)
                                {
                                    var roleNames = await userManager.GetRolesAsync(user);
                                    var roleName = roleNames == null || roleNames.Count == 0 ? "" : roleNames.First();
                                    <td>@user.UserName</td>
                                    <td>@user.TrueName</td>
                                    <td>@user.Department</td>
                                    <td>@user.Job</td>
                                    <td>@roleName</td>
                                    <td>
                                        <row>
                                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-outline-primary">编辑</a>
                                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-outline-danger">删除</a>
                                        </row>
                                    </td> <!-- 在每一行的最后一个单元格中添加按钮代码 -->
                                }
                            </tr>
                        </tbody>
                    </table>

                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>
