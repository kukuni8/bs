@using Microsoft.AspNetCore.Identity;
@using ProjectManagementSystem.ViewModels
@using ProjectManagementSystem.Data
@model UserAddViewModel
@inject RoleManager<IdentityRole> roleManager;
@{
    ViewBag.Title = "添加用户";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="UserName">
            <span class="invalid" asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Email">
            <span class="invalid" asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Password">
            <span class="invalid" asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="IdCardNo" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="IdCardNo">
            <span class="invalid" asp-validation-for="IdCardNo"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="BirthDate" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="BirthDate">
            <span class="invalid" asp-validation-for="BirthDate"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2"></label>
        <div class="col-sm-10">
            <select asp-for="RoleName" asp-items="@new SelectList(roleManager.Roles.Select(a=>a.Name))" class="form-control valid">
            </select>

            <span class="invalid" asp-validation-for="RoleName"></span>
        </div>
    </div>
    <div class="invalid" asp-validation-summary="ModelOnly">
    </div>

    <button type="submit" class="btn btn-primary">提交</button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</form>