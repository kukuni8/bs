@using ProjectManagementSystem.Data
@using ProjectManagementSystem.Models
@using ProjectManagementSystem.ViewModels
@model LookIndexViewModel
<div class="container">
    <div class="col-12">
        <div class="row">
            <!-- Sales Card -->
            <div class="col-xxl-4 col-md-6">
                <div class="card info-card sales-card">
                    <div class="card-body">
                        <h5 class="card-title">任务</h5>
                        <div class="d-flex align-items-center">
                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                <i class="bi bi-card-checklist"></i>
                            </div>
                            <div class="ps-3">
                                <h6>@Model.MissionCount</h6>
                            </div>
                        </div>
                    </div>

                </div>
            </div><!-- End Sales Card -->
            <!-- Revenue Card -->
            <div class="col-xxl-4 col-md-6">
                <div class="card info-card revenue-card">
                    <div class="card-body">
                        <h5 class="card-title">资金</h5>

                        <div class="d-flex align-items-center">
                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                <i class="bi bi-currency-yen"></i>
                            </div>
                            <div class="ps-3">
                                <h6>@Model.Money</h6>
                            </div>
                        </div>
                    </div>

                </div>
            </div><!-- End Revenue Card -->
            <!-- Customers Card -->
            <div class="col-xxl-4 col-xl-12">

                <div class="card info-card customers-card">
                    <div class="card-body">
                        <h5 class="card-title">成员</h5>

                        <div class="d-flex align-items-center">
                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                <i class="bi bi-people"></i>
                            </div>
                            <div class="ps-3">
                                <h6>@Model.UserCount</h6>
                            </div>
                        </div>

                    </div>
                </div>

            </div><!-- End Customers Card -->
        </div>
    </div>
    <!-- Reports -->
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">任务趋势图</h5>

                <!-- Line Chart -->
                <div id="areachart"></div>
                <!-- End Line Chart -->

            </div>

        </div>
    </div>
    <!-- End Reports -->

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">每日任务状态变动图</h5>
                <div class="col-3">
                    <select id="user-select" class="form-control">
                        @foreach (var name in Model.UserNames)
                        {
                            <option value="@name">@name</option>
                        }

                        <!-- 添加其他选项... -->
                    </select>
                </div>
                <!-- User Select Dropdown -->
                <!-- Column Chart -->
                <div id="stackChart"></div>
                <!-- End Column Chart -->

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">成员贡献图</h5>

                    <!-- Line Chart -->
                    <div id="pieChart"></div>
                    <!-- End Line Chart -->

                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <!-- Line Chart -->
                    <div id="barChart"></div>
                    <!-- End Line Chart -->
                </div>
            </div>
        </div>
    </div>


    <div class="col-12">
        <div class="card">

            <div class="card-body">
                <h5 class="card-title">资金变化图</h5>

                <!-- Line Chart -->
                <div id="fundChart"></div>
                <!-- End Line Chart -->

            </div>

        </div>
    </div>
</div>

<script>
    var projectId = @Model.ProjectId;
</script>
@*bar图*@
<script>
    var barChart;
    $(document).ready(function () {
        var options = {
            series: [{
                name: '数量',
                data: []
            }],
            chart: {
                type: 'bar',
                height: 350
            },
            plotOptions: {
                bar: {
                    borderRadius: 4,
                    borderRadiusApplication: 'end',
                    horizontal: true,
                }
            },
            dataLabels: {
                enabled: false
            },
            xaxis: {
                categories: []
            },
            tooltip: {
                x: {
                    show: true
                },
                y: {
                    formatter: function (value) {
                        return value;
                    }
                }
            }
        };

        $.get('/Project/GetBarData?projectId=' + projectId, function (data) {
            options.series[0].data = data.numbers;
            options.xaxis.categories = data.names;
            if (barChart) {
                barChart.destroy();
            }
            barChart = new ApexCharts(document.querySelector("#barChart"), options);
            barChart.render();
        });
    });
</script>


@*饼图*@
<script>
    var pieChart;
    $(document).ready(function () {
        $.get('/Project/GetPieData?projectId=' + projectId, function (data) {
            console.log('Data received from server:', data);
            renderPieChart(data);
        });
    });

    function renderPieChart(data) {
        if (data.length === 0) {
            console.log('No data to render');
            return;
        }
        var options = {
            series: data.numbers,
            chart: {
                type: 'pie',
            },
            labels: data.names,
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }]
        };
        if (pieChart) {
            pieChart.destroy();
        }
        pieChart = new ApexCharts(document.querySelector("#pieChart"), options);
        pieChart.render();
    }
</script>

@*资金变化图*@
<script>
    var fundChart;

    function renderFundChart(data) {
        if (data.length === 0) {
            console.log('No data to render');
            return;
        }
        if (fundChart) {
            fundChart.destroy();
        }
        var options = {
            series: data,
            chart: {
                type: 'line',
                height: 350,
                stacked: false
            },
            dataLabels: {
                enabled: false
            },
            stroke: {
                width: [1, 1, 4]
            },
            xaxis: {
                type: 'datetime',
                labels: {
                    format: 'dd/MM/yy'
                }
            },
            yaxis: [
                {
                    axisTicks: {
                        show: true,
                    },
                    axisBorder: {
                        show: true,
                        color: '#008FFB'
                    },
                    tooltip: {
                        enabled: true
                    }
                }
            ],
            tooltip: {
                fixed: {
                    enabled: true,
                    position: 'topLeft', // topRight, topLeft, bottomRight, bottomLeft
                    offsetY: 30,
                    offsetX: 60
