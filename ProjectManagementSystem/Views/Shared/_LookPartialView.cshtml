    }

    // 页面加载完成后，自动加载数据
    $(document).ready(function () {
        console.log('Document ready');
        $.get('/Project/GetFundData?projecctId=' + projectId, function (data) {
            console.log('Data received from server:', data);
            renderFundChart(data);
        });
    });

</script>

@*每日任务状态图*@
<script>
    var stackChart;
    function renderStackChart(data) {
        if (data.length === 0) {
            console.log('No data to render');
            return;
        }
        console.log(stackChart);

        if (stackChart) {
            stackChart.destroy();
        }
        var options = {
            series: data,
            chart: {
                type: 'bar',
                height: 350,
                stacked: true,
                toolbar: {
                    show: true
                },
                zoom: {
                    enabled: true
                }
            },
            responsive: [{
                breakpoint: 480,
                options: {
                    legend: {
                        position: 'bottom',
                        offsetX: -10,
                        offsetY: 0
                    }
                }
            }],
            plotOptions: {
                bar: {
                    horizontal: false,
                    borderRadius: 10,
                    borderRadiusApplication: 'end', // 'around', 'end'
                    borderRadiusWhenStacked: 'last', // 'all', 'last'
                    dataLabels: {
                        total: {
                            enabled: true,
                            style: {
                                fontSize: '13px',
                                fontWeight: 900
                            }
                        }
                    }
                },
            },
            xaxis: {
                type: 'datetime',
                labels: {
                    format: 'yyyy/MM/dd'
                }
            },
            legend: {
                position: 'right',
                offsetY: 40
            },
            fill: {
                opacity: 1
            }
        };

        stackChart = new ApexCharts(document.querySelector("#stackChart"), options);
        stackChart.render();
    }

    $('#user-select').change(function () {
        console.log('Change event triggered');
        var user = encodeURIComponent($(this).val());
        $.get('/Project/GetStackColumnData?user=' + user + '&projectId=' + projectId, function (data) {
            console.log('Data received from server:', data);
            renderStackChart(data);
        });
    });

    // 页面加载完成后，自动触发“All”的点击事件
    $(document).ready(function () {
        console.log('Document ready');
        $('#user-select').trigger('change');
    });

</script>


@*//area趋势图*@
<script>
    var areachart;  // 创建一个全局变量来保存当前的图表

    function renderAreaChart(data) {
        if (data.length === 0) {
            console.log('No data to render');
            return;
        }
        if (areachart) {
            areachart.destroy();  // 如果已经存在一个图表，先销毁它
        }

        // 处理数据，使其满足 ApexCharts 的要求
        var series = data.map(function (item) {
            return {
                name: item.name,
                data: item.data.map(function (d) {
                    return { x: d.x, y: d.y }
                }),
                color: item.color, // 颜色字段
            };
        });

        var options = {
            series: series,
            chart: {
                height: 350,
                type: 'area',
            },
            fill: {
                type: "gradient",
                gradient: {
                    shadeIntensity: 1,
                    opacityFrom: 0.3,
                    opacityTo: 0.4,
                    stops: [0, 90, 100]
                }
            },
            dataLabels: {
                enabled: false
            },
            stroke: {
                curve: 'smooth',
                width: 2
            },
            xaxis: {
                type: 'datetime'
            },
            tooltip: {
                fixed: {
                    enabled: true,
                    position: 'topLeft', //topRight, topLeft, bottomRight, bottomLeft
                    offsetY: 30,
                    offsetX: 60
                },
                shared: true,
                intersect: false,
                x: {
                    format: 'yyyy/MM/dd'
                },
            },
        };

        areachart = new ApexCharts(document.querySelector("#areachart"), options);
        areachart.render();
    }

    $(document).ready(function () {
        $.get('/Project/GetData?projectId=' + projectId, function (data) {
            renderAreaChart(data);
        });
    });
</script>
