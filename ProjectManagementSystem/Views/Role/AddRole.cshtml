@model ProjectManagementSystem.ViewModels.RoleAddViewModel

@{
    ViewBag.Title = "添加角色";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RoleName">
            <span class="invalid" asp-validation-for="RoleName"></span>
        </div>
    </div>

    <div class="invalid" asp-validation-summary="ModelOnly">
    </div>
    <div>
        @{
            var keys = Model.AuthorityDic.Keys;
            foreach (var key in keys)
            {
                <div class="form-check">
                    <label class="col-sm-2">@key</label>
                    <input class="form-check-input" type="checkbox" asp-for="@Model.AuthorityDic[key]">
                </div>
            }
        }
    </div>


    <button type="submit" class="btn btn-primary">提交</button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</form>