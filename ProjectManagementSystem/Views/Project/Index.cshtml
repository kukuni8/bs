@using ProjectManagementSystem.ViewModels;
@model IEnumerable<ProjectIndexViewModel>

<style>
    .project-progress {
        width: 80%;
    }

    .progress {
        height: 20px;
        margin-bottom: 0;
    }

    .progress-bar {
        font-size: 12px;
        line-height: 20px;
        text-align: center;
    }
</style>



<div class="card">
    <div class="card-body">
        <h2 class="card-title">项目列表</h2>
        <div class="text-right">
            <a asp-action="AddProject" class="btn btn-outline-primary float-end">新项目</a>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    @foreach (var project in Model)
                    {
                        <div class="accordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading-@project.Id">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@project.Id" aria-expanded="false" aria-controls="collapse-@project.Id">
                                        @project.Name
                                    </button>
                                </h2>
                                <div id="collapse-@project.Id" class="accordion-collapse collapse" aria-labelledby="heading-@project.Id" data-bs-parent=".accordion">
                                    <div class="accordion-body">
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">项目名称</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" value="@project.Name" disabled>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">项目状态</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" value="@project.Status" disabled>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">项目创建时间</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" value="@project.CreatedDate.ToString("yyyy-MM-dd")" disabled>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">项目提出人</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" value="@project.PutForward.ToString()" disabled>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">项目负责人</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" value="@project.Functionary.ToString()" disabled>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">项目人数</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" value="@project.UserCount.ToString()" disabled>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-3">
                                                <a asp-action="ProjectDetail" asp-controller="Project" asp-route-id="@project.Id" class="btn btn-outline-primary w-100">详情</a>
                                            </div>
                                            <div class="col-md-3 offset-6">
                                                <form asp-action="DeleteProject" asp-route-id="@project.Id" onsubmit="return confirm('确认删除?')">
                                                    <button type="submit" class="btn btn-outline-danger w-100">删除</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>



                    }
                </div>
            </div>
        </div>


    </div>
</div>
