@using Microsoft.AspNetCore.Identity;
@using ProjectManagementSystem.ViewModels
@using ProjectManagementSystem.Data
@model RiskEditViewModel
@inject UserManager<ApplicationUser> userManager
<style>
    textarea.auto-resize {
        height: auto;
        min-height: 100px;
        overflow-y: hidden;
        resize: none;
    }

        textarea.auto-resize:focus {
            outline: none;
        }

        textarea.auto-resize:invalid {
            border-color: #dc3545;
        }

        textarea.auto-resize:not(:placeholder-shown) {
            height: auto;
            height: calc(1.5em + 2px + ${textarea.scrollHeight}px);
        }
</style>


<div class="card">
    <div class="card-body">
        <h5 class="card-title">编辑风险</h5>
        <div class="container">
            <form asp-action="EditRisk" asp-controller="Risk" method="post">
                <div class="form-group row">
                    <input asp-for="ProjectId" value="@Model.ProjectId" hidden>
                    <input asp-for="PutForwardId" value="@Model.PutForwardId" hidden>
                    <input asp-for="Id" value="@Model.Id" hidden>
                    <label asp-for="Name" class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="@Model.Name" required="">
                        <div class="invalid-feedback">请输入风险名称</div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label asp-for="Project" class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control readonly-input" asp-for="Project" readonly>
                        <div class="invalid-feedback">请输入所属项目</div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label asp-for="CreateDate" class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control readonly-input" asp-for="CreateDate" readonly>
                        <div class="invalid-feedback">请输入创建日期</div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label asp-for="Incidence" class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <textarea type="text" class="form-control auto-resize" asp-for="Incidence"></textarea>
                        <div class="invalid-feedback">请输入风险影响 </div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label asp-for="Solution" class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <textarea type="text" class="form-control auto-resize" asp-for="Solution"></textarea>
                        <div class="invalid-feedback">请输入解决方案 </div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label asp-for="Level" class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="Level" asp-items="@Html.GetEnumSelectList<RiskLevel>()"></select>
                        <div class="invalid-feedback">请输入风险等级</div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label asp-for="Status" class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="Status" asp-items="@Html.GetEnumSelectList<RiskStatus>()"></select>
                        <div class="invalid-feedback">请输入风险状态</div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label asp-for="RiskType" class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="RiskType" asp-items="@Html.GetEnumSelectList<RiskType>()"></select>
                        <div class="invalid-feedback">请输入风险类型</div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label asp-for="PutForward" class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <input class="form-control readonly-input" asp-for="PutForward" value="@Model.PutForward" readonly>
                        <div class="invalid-feedback">请输入风险提出者</div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label class="col-sm-2">当前处理人</label>
                    <div class="col-sm-10">
                        <input class="form-control " asp-for="Functionary" value="@(await userManager.FindByNameAsync(User.Identity.Name))" readonly>
                        <div class="invalid-feedback">当前处理人</div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="text-center">
                        <a asp-action="ReturnDetail" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">返回</a>
                        <button type="submit" class="btn btn-primary">保存</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#backButton").on("click", function () {
                window.history.back();
            });
        });
    </script>
    <script>
        function autoResizeTextarea(textarea) {
            textarea.style.height = 'auto';
            textarea.style.height = textarea.scrollHeight + 'px';
        }

        // 在页面加载时调整textarea的高度，并为所有具有'auto-resize'类的textarea元素添加oninput事件处理器
        window.addEventListener('DOMContentLoaded', function () {
            const textareas = document.querySelectorAll('.auto-resize');
            textareas.forEach((textarea) => {
                autoResizeTextarea(textarea);
                textarea.addEventListener('input', () => autoResizeTextarea(textarea));
            });
        });

    </script>
}

